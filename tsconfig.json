{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "rootDir": "./",
    // "typeRoots": ["node_modules/@types/", "./types/"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "commonjs"
    //    "strictNullChecks": true
    // "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist", "tests"]
}
